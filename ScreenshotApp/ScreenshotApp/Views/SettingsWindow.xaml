<Window x:Class="ScreenshotApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="500"
        Height="600"
        MinWidth="400"
        MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="SectionBrush" Color="#FF2D2D2D"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SectionBrush}" Padding="20,15">
            <TextBlock Text="Settings"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TitleBrush}"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Capture Settings Section -->
                <Border Background="{StaticResource SectionBrush}" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="Capture Settings"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TitleBrush}"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Hotkey"
                                           Foreground="{StaticResource TitleBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Global hotkey to trigger screen capture"
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="Print Screen"
                                    Width="120"
                                    Height="28"
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="OnChangeHotkeyClick"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- General Section -->
                <Border Background="{StaticResource SectionBrush}" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="General"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TitleBrush}"
                                   Margin="0,0,0,10"/>

                        <CheckBox x:Name="AutoStartCheckBox"
                                  Content="Start with Windows"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,5"
                                  Click="OnAutoStartClick"/>
                        <TextBlock Text="Automatically start the application when Windows boots"
                                   Foreground="#FF888888"
                                   FontSize="11"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <Border Background="{StaticResource SectionBrush}" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="Appearance"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TitleBrush}"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Theme"
                                   Foreground="{StaticResource TitleBrush}"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="ThemeComboBox"
                                  Width="200"
                                  HorizontalAlignment="Left"
                                  SelectionChanged="OnThemeChanged">
                            <ComboBoxItem Content="Dark Mode"/>
                            <ComboBoxItem Content="Light Mode"/>
                            <ComboBoxItem Content="Match System" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="{StaticResource SectionBrush}" CornerRadius="4">
                    <StackPanel Margin="15">
                        <TextBlock Text="About"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TitleBrush}"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Version "
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock x:Name="VersionText"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>

                        <Button Content="Check for Updates"
                                Width="140"
                                Height="28"
                                HorizontalAlignment="Left"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnCheckForUpdatesClick"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{StaticResource SectionBrush}" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK"
                        Width="80"
                        Height="28"
                        Margin="0,0,10,0"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Click="OnOkClick"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
