<Window x:Class="ScreenshotApp.Views.UpdateAvailableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Width="450"
        Height="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF4CAF50"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock x:Name="IconText"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="48"
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,0,15,0"
                       VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TitleBrush}"/>
                <TextBlock x:Name="VersionText"
                           FontSize="14"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Message -->
        <TextBlock x:Name="MessageText"
                   Grid.Row="1"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Details Box -->
        <Border Grid.Row="2"
                Background="#FF2D2D2D"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="CurrentVersionText"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="LatestVersionText"
                           Foreground="{StaticResource TextBrush}"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="PrimaryButton"
                    Width="140"
                    Height="32"
                    Margin="0,0,10,0"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Click="OnPrimaryClick"/>
            <Button Content="Close"
                    Width="100"
                    Height="32"
                    Background="#FF3C3C3C"
                    Foreground="{StaticResource TextBrush}"
                    BorderThickness="0"
                    Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
