<Window x:Class="ScreenshotApp.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Screenshot Tool"
        Width="400"
        Height="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="&#xE71E;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="48"
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,0,15,0"
                       VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Screenshot Tool"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TitleBrush}"/>
                <TextBlock x:Name="VersionText"
                           FontSize="14"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="A fast, lightweight screenshot capture tool for Windows.&#x0A;Quickly capture regions, annotate, and save or copy to clipboard."
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Features -->
        <StackPanel Grid.Row="2" Margin="40,0,40,20">
            <TextBlock Text="Features:"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TitleBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="&#x2022; Global hotkey for instant capture"
                       Foreground="{StaticResource TextBrush}"
                       Margin="10,0,0,4"/>
            <TextBlock Text="&#x2022; Region selection with visual overlay"
                       Foreground="{StaticResource TextBrush}"
                       Margin="10,0,0,4"/>
            <TextBlock Text="&#x2022; Annotation tools (pen, shapes, text)"
                       Foreground="{StaticResource TextBrush}"
                       Margin="10,0,0,4"/>
            <TextBlock Text="&#x2022; Copy to clipboard or save as PNG"
                       Foreground="{StaticResource TextBrush}"
                       Margin="10,0,0,4"/>
        </StackPanel>

        <!-- Copyright -->
        <TextBlock Grid.Row="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,10">
            <Hyperlink x:Name="GitHubLink" RequestNavigate="OnHyperlinkNavigate">
                <TextBlock Text="GitHub Repository" Foreground="#FF0078D4" FontSize="11"/>
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="3"
                   Text="&#x00A9; 2026 Screenshot Tool. All rights reserved."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Foreground="#FF888888"
                   FontSize="11"
                   Margin="0,0,0,30"/>

        <!-- OK Button -->
        <Button Grid.Row="4"
                Content="OK"
                Width="80"
                Height="28"
                HorizontalAlignment="Center"
                Click="OnOkClick"
                Background="{StaticResource AccentBrush}"
                Foreground="White"
                BorderThickness="0"/>
    </Grid>
</Window>
